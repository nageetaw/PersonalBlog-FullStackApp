                <div class="col">
                    <h5 class="card-title" id="postTitle"><%= posts[index].title %></h5>
                    <p class="card-text" id="postDescription"><%= posts[index].description %></p>
                <button class="btn btn-dark w-100 position-relative bottom-0 end-0" id="editPost" onclick="openModal('<%=posts[index].title%>','<%=posts[index].description%>','<%=posts[index].postImage%>','<%=posts[index]._id%>')">Edit Post</button>
            
                <a class="btn btn-danger w-100 position-relative bottom-0 end-0 mt-4" href="/deletePost/<%= posts[index]._id%>">
                    Delete Post</a>
                </div>
              

            </div>
            <% } %>
